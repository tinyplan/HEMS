<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tinyplan.exam.user.dao.RoleMapper">
    <sql id="roleColumn">role_id as roleId, role_name as roleName, description</sql>

    <select id="getRoles" resultType="com.tinyplan.exam.user.entity.po.Role">
        select <include refid="roleColumn"/>
        from role
        <where>
            role_id in
            <foreach collection="roleIdList" item="roleId" open="(" close=")" separator=",">
                #{roleId}
            </foreach>
        </where>
    </select>
</mapper>